/******************************************************************************
 * PROGRAM: SUM OF NUMBERS
 * DESCRIPTION:
 * This program calculates the sum of all integers from 1 to a user-entered number (n).
 * The user inputs a positive integer, and the program uses a for loop to add
 * all numbers from 1 up to n, then displays the total.
 *
 * EXAMPLE:
 * Input: 5
 * Output: Sum = 15
 *

 *******************************************************************************/

#include <stdio.h>
#include <conio.h>
#include <math.h>

int main(void)
{
    int i, n, sum; // Declare variables: counter, input number, and sum

    printf("Enter a number (n): ");
    scanf("%d", &n);

    sum = 0; // Initialize sum to 0

    // Loop from 1 to n and add each number to sum
    for (i = 1; i <= n; i++)
    {
        sum = sum + i;
    }

    // Display the result
    printf("Sum = %d", sum);

    getch(); // Wait for a key press before closing
}


***********************************************************************************/
/******************************************************************************
 * PROGRAM: SUM OF SQUARES
 * DESCRIPTION:
 * This program calculates the sum of the squares of all integers from 1 to a user-entered number (n).
 * The user inputs a positive integer, and the program uses a for loop to add
 * the squares of all numbers from 1 up to n, then displays the total.
 *
 * EXAMPLE:
 * Input: 3
 * Output: Sum of squares = 14  (1² + 2² + 3² = 14)
 *
 
 *******************************************************************************/

/******************************************************************************
 * PROGRAM: SUM OF SQUARES
 * DESCRIPTION:
 * This program calculates the sum of the squares of all integers 
 * from 1 to a user-entered number (n).
 * 
 * HOW IT WORKS:
 * 1. The user enters a positive integer (n).
 * 2. The program uses a for loop to calculate 1² + 2² + 3² + ... + n².
 * 3. It then prints the total result on the screen.
 *
 * EXAMPLE:
 * Input: 4
 * Output: Sum of squares = 30  (1² + 2² + 3² + 4² = 30)
 *
 * VARIABLES:
 * - i: loop counter
 * - n: user input number
 * - sum: stores the total of all squares
 *

 *******************************************************************************/

#include <stdio.h>
#include <conio.h>
#include <math.h>

/**
 * main - Entry point of the program
 * 
 * Returns: 0 after successful execution
 */
int main(void)
{
    int i, n, sum; // Declare variables: counter, input number, and sum

    printf("Enter a number (n): ");
    scanf("%d", &n);

    sum = 0; // Initialize sum to 0

    // Loop from 1 to n and add the square of each number to sum
    for (i = 1; i <= n; i++)
    {
        sum = sum + (i * i);
    }

    // Display the result
    printf("Sum of squares = %d", sum);

    getch(); // Wait for a key press before closing
}

